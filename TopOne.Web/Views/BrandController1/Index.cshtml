@model List<Brand>
<div class="container">

    <div class="row mb-4">
        <div class="col-md-6 text-uppercase">
            <h2>Brand Lists</h2>

        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="BrandController1" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create
            </a>
        </div>

    </div>

    <hr />
    @if(Model.Count() > 0)
    {
            <table class="table table-bordered table-striped">
                <tr>
                    <th>Name</th>
                    <th>Established Year</th>
                </tr>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.EstablishedYear</td>
                        </tr>
                    }
                </tbody>
            </table>
        
    } else {
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="text-center text-uppercase text-warning pt-4">No Records Available here !</h2>
                </div>

            </div>

        </div>
        // 1:07
    }

</div>  